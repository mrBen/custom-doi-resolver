{
  "manifest_version": 2,
  "name": "Custom DOI resolver",
  "description": "A browser extention that redirect DOIs to a user defined resolver.",
  "version": "0.4.0",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "homepage_url": "https://github.com/mrBen/custom-doi-resolver",
  "permissions": [
    "menus",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "96": "icons/icon-96.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Custom DOI resolver",
    "default_popup": "options/index.html",
    "theme_icons": [{
      "light": "icons/icon-16-light.png",
      "dark": "icons/icon-16-dark.png",
      "size": 16
    }, {
      "light": "icons/icon-32-light.png",
      "dark": "icons/icon-32-dark.png",
      "size": 32
    }, {
      "light": "icons/icon-48-light.png",
      "dark": "icons/icon-48-dark.png",
      "size": 48
    }, {
      "light": "icons/icon-64-light.png",
      "dark": "icons/icon-64-dark.png",
      "size": 64
    }, {
      "light": "icons/icon-96-light.png",
      "dark": "icons/icon-96-dark.png",
      "size": 96
    }, {
      "light": "icons/icon-128-light.png",
      "dark": "icons/icon-128-dark.png",
      "size": 128
    }]
  },
  "options_ui": {
    "page": "options/index.html",
    "browser_style": true
  },
  "omnibox": {
    "keyword": "doi"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{ecae18d0-767f-449c-9956-c17a8058d0dd}",
      "strict_min_version": "57.0"
    }
  }
}
